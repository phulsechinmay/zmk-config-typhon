#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &typhon_layout;
        /* zmk,matrix_transform = &default_transform; --- Removed as it's defined in typhon_layout */
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
// | SW6  | SW5  | SW4  | SW3  | SW2  | SW1  |                 | SW1  | SW2  | SW3  | SW4  | SW5  | SW6  |
// | SW12 | SW11 | SW10 | SW9  | SW8  | SW7  |                 | SW7  | SW8  | SW9  | SW10 | SW11 | SW12 |
// | SW18 | SW17 | SW16 | SW15 | SW14 | SW13 |                 | SW13 | SW14 | SW15 | SW16 | SW17 | SW18 |
// | SW24 | SW23 | SW22 | SW21 | SW20 | SW19 |                 | SW19 | SW20 | SW21 | SW22 | SW23 | SW24 |
// | SW30 | SW29 | SW28 | SW27 | SW26 | SW25 |                 | SW25 | SW26 | SW27 | SW28 | SW29 | SW30 |

        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                 RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)                 RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)                 RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4) RC(5,5)                 RC(5,6) RC(5,7) RC(5,8) RC(5,9) RC(5,10) RC(5,11)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row A from the schematic file
            , <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row B from the schematic file
            , <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row C from the schematic file
            , <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row D from the schematic file
            , <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file
            ;

    };

    typhon_layout: typhon_layout_0 {
            compatible = "zmk,physical-layout";
            display-name = "Typhon";
            transform = <&default_transform>;
            kscan     = <&kscan0>;

        /* Include vertical offsets of each column in key layout */
        keys = <
        /* ─────────────── LEFT HALF ─────────────── */
        <&key_physical_attrs 100 100    0  40 0 0 0>, <&key_physical_attrs 100 100  100  20 0 0 0>, <&key_physical_attrs 100 100  200   0 0 0 0>, <&key_physical_attrs 100 100  300   0 0 0 0>, <&key_physical_attrs 100 100  400  20 0 0 0>, <&key_physical_attrs 100 100  500  40 0 0 0>,
        <&key_physical_attrs 100 100    0 140 0 0 0>, <&key_physical_attrs 100 100  100 120 0 0 0>, <&key_physical_attrs 100 100  200 100 0 0 0>, <&key_physical_attrs 100 100  300 100 0 0 0>, <&key_physical_attrs 100 100  400 120 0 0 0>, <&key_physical_attrs 100 100  500 140 0 0 0>,
        <&key_physical_attrs 100 100    0 240 0 0 0>, <&key_physical_attrs 100 100  100 220 0 0 0>, <&key_physical_attrs 100 100  200 200 0 0 0>, <&key_physical_attrs 100 100  300 200 0 0 0>, <&key_physical_attrs 100 100  400 220 0 0 0>, <&key_physical_attrs 100 100  500 240 0 0 0>,
        <&key_physical_attrs 100 100    0 340 0 0 0>, <&key_physical_attrs 100 100  100 320 0 0 0>, <&key_physical_attrs 100 100  200 300 0 0 0>, <&key_physical_attrs 100 100  300 300 0 0 0>, <&key_physical_attrs 100 100  400 320 0 0 0>, <&key_physical_attrs 100 100  500 340 0 0 0>,
        <&key_physical_attrs 100 100    0 440 0 0 0>, <&key_physical_attrs 100 100  100 420 0 0 0>, <&key_physical_attrs 100 100  200 420 0 0 0>, <&key_physical_attrs 100 100  300 420 0 0 0>, <&key_physical_attrs 100 100  400 420 0 0 0>, <&key_physical_attrs 100 100  500 440 0 0 0>,

        /* ─────────────── RIGHT HALF ────────────── */
        <&key_physical_attrs 100 100  700   0 0 0 0>, <&key_physical_attrs 100 100  800   0 0 0 0>, <&key_physical_attrs 100 100  900  20 0 0 0>, <&key_physical_attrs 100 100 1000  20 0 0 0>, <&key_physical_attrs 100 100 1100  40 0 0 0>, <&key_physical_attrs 100 100 1200  60 0 0 0>,
        <&key_physical_attrs 100 100  700 100 0 0 0>, <&key_physical_attrs 100 100  800 100 0 0 0>, <&key_physical_attrs 100 100  900 120 0 0 0>, <&key_physical_attrs 100 100 1000 120 0 0 0>, <&key_physical_attrs 100 100 1100 140 0 0 0>, <&key_physical_attrs 100 100 1200 160 0 0 0>,
        <&key_physical_attrs 100 100  700 200 0 0 0>, <&key_physical_attrs 100 100  800 200 0 0 0>, <&key_physical_attrs 100 100  900 220 0 0 0>, <&key_physical_attrs 100 100 1000 220 0 0 0>, <&key_physical_attrs 100 100 1100 240 0 0 0>, <&key_physical_attrs 100 100 1200 260 0 0 0>,
        <&key_physical_attrs 100 100  700 300 0 0 0>, <&key_physical_attrs 100 100  800 300 0 0 0>, <&key_physical_attrs 100 100  900 320 0 0 0>, <&key_physical_attrs 100 100 1000 320 0 0 0>, <&key_physical_attrs 100 100 1100 340 0 0 0>, <&key_physical_attrs 100 100 1200 360 0 0 0>,
        <&key_physical_attrs 100 100  700 420 0 0 0>, <&key_physical_attrs 100 100  800 420 0 0 0>, <&key_physical_attrs 100 100  900 420 0 0 0>, <&key_physical_attrs 100 100 1000 420 0 0 0>, <&key_physical_attrs 100 100 1100 440 0 0 0>, <&key_physical_attrs 100 100 1200 460 0 0 0>
        >;

    };
};